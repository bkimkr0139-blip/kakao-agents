# 서버 설정
NODE_ENV=development
PORT=3000

# CORS 설정 (카카오 빌더 도메인)
ALLOWED_ORIGINS=https://builder.kakao.com,http://localhost:3000

# OpenAI 설정
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo
MAX_TOKENS=500
TEMPERATURE=0.7

# Rate Limiting 설정
RATE_LIMIT_POINTS=100
RATE_LIMIT_DURATION=60
RATE_LIMIT_BLOCK_DURATION=60

USER_RATE_LIMIT_POINTS=30
USER_RATE_LIMIT_DURATION=60
USER_RATE_LIMIT_BLOCK_DURATION=30

# 관리자 토큰 (레이트 리미트 우회용)
ADMIN_BYPASS_TOKEN=your_admin_bypass_token_here

# 카카오톡 챗봇 설정
KAKAO_BOT_ID=your_kakao_bot_id
KAKAO_BOT_NAME=Business Support Agent

# 로깅 설정
LOG_LEVEL=info

# 데이터베이스 설정 (향후 확장용)
# DATABASE_URL=mongodb://localhost:27017/kakaotalk-agent
# REDIS_URL=redis://localhost:6379

# 비즈니스 로직 설정
DEFAULT_LANGUAGE=ko
CONVERSATION_TIMEOUT=3600000

# 외부 API 설정 (향후 확장용)
# COMPANY_API_BASE_URL=https://api.yourcompany.com
# COMPANY_API_KEY=your_company_api_key

# 보안 설정
SESSION_SECRET=your_session_secret_here

# 모니터링 설정 (향후 확장용)
# SENTRY_DSN=your_sentry_dsn_here
# NEWRELIC_LICENSE_KEY=your_newrelic_key_here